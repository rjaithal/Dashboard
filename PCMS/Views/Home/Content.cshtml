@model IEnumerable<PCMS_Library.pcms_content>

@{
    ViewBag.Title = "Content";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3> Content </h3>
            </div>

        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <a class='btn btn-primary' href="@Url.Action("AddContent","home",null)"><i class='fa fa-pencil'></i> Create Content</a>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-55">
                                    <div class="thumbnail">
                                        <div class="image view view-first">
                                            <h1>@item.CONTENT_NAME</h1>
                                            <div class="mask">
                                                <p>@item.CONTENT_DESCRIPTION</p>
                                                <div class="tools tools-bottom">
                                                    <a class="btn btn-primary" href="@Url.Action("EditContent", "Home", new { query = @item.CONTENT_ID })"><i class="fa fa-pencil"></i></a>
                                                 
                                                    <a href='@Url.Action("DeleteContent","Home",new { query = @item.CONTENT_ID })' onClick="return confirm('Are you sure you want to delete?')"><i class="fa fa-times"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="caption">
                                            <p>@item.CONTENT_DESCRIPTION</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>