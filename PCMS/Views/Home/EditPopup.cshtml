@model PCMS_Library.pcms_popup

@{
    ViewBag.Title = "EditPopup";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("EditPopUp", "Home", FormMethod.Post))
{
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Edit Popup</h3>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="text-center">
                        @if (ViewBag.Error != null)
                        {
                            <div class="row text-center">@ViewBag.Error</div>
                        }
                    </div>
                    <div class="x_panel">
                        <div class="x_content">
                            <div id="alerts"></div>

                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <label for="" class="control-label">Popup Name:</label>
                                    @Html.TextBoxFor(m => m.POPUP_NAME, new { @class = "form-control", required = "", disabled = "" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <label for="" class="control-label">Popup Description:</label>
                                    @Html.TextBoxFor(m => m.POPUP_DESCRIPTION, new { @class = "form-control", pattern = "[0-9a-zA-Z-_# ]{2,150}", title = "Maximum 150 characters allowed -_# special characters" })
                                </div>
                            </div>
                            <label for="" class="control-label">Popup Body:</label>
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    @Html.TextAreaFor(m => m.POPUP_ID, new { @class = "form-control hidden ", style = "height:50px" })
                                    @Html.TextAreaFor(m => m.POPUP_HTML, new { @class = "form-control ", id = "editor", style = "height:50px" })
                                </div>
                            </div>
                            <br />
                            <button class='btn btn-primary' type="submit">Save</button>
                            <button class='btn btn-warning'>Clear</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}