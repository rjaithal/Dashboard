@model IEnumerable<PCMS_Library.pcms_campaign>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Banner</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <div>
                            @if (ViewBag.Success != null)
                            { <div class="text-center">@ViewBag.Success</div>}
                            <a class="btn btn-primary" href="@Url.Action("AddCampaign", "Home")">Add Campaign</a>

                        </div>
                        <div class="table-responsive">
                            <table id="datatable" class="table table-striped jambo_table bulk_action" id="example">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title">Sr. No.</th>
                                        <th class="column-title">Campaign Name</th>
                                        <th class="column-title">Campaign Start Date</th>
                                        <th class="column-title">Campaign End Date</th>
                                        <th class="column-title">Campaign Status</th>
                                        <th class="column-title no-link last">
                                            <span class="nobr">Action</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int i = 1;}
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @i
                                            </td>
                                            <td>@item.CAMPAIGN_NAME</td>
                                            <td>@item.CAMPAIGN_START_DATE.ToString()</td>
                                            <td>@item.CAMPAIGN_END_DATE.ToString()</td>
                                            <td>@item.CAMPAIGN_STATUS</td>
                                            <td><a class="btn btn-primary" href="@Url.Action("EditCampaign", "Home", new { query = @item.CAMPAIGN_ID })">Edit Campaign</a></td>
                                        </tr>
                                        i = i + 1;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="myModal" class="modal myModal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Update URL</h4>
            </div>
            <div class="modal-body">
                <div id="loadData"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

